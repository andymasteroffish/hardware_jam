    case 'z':
      copy2D(letter_z, letter_grid);
      break;
    case '|':
      copy2D(letter_here, letter_grid);
      break;
    case '<':
      copy2D(letter_left, letter_grid);
      break;
    case '>':
      copy2D(letter_right, letter_grid);
      break;

    default:
      copy2D(letter_def, letter_grid);
      break;
  }

  //transfer the letter
  for (int i = -1; i < LETTER_WIDTH + 1; i++) {
    for (int y = 0; y < NUM_ROWS; y++) {
      int x = start_x + i;
      if (wrap){
        while (x < 0)  x += NUM_COLS;    //in case it is negative
        x = x % NUM_COLS;                //in case it is larger than cols
      }
      //the far right column is blank
      if (x >= 0 && x < NUM_COLS) {
        if (i == -1 || i == LETTER_WIDTH) {
          pixel[x][y] = '-';
        }
        //everything else is the letter
        else if (letter_grid[y][i]) {
          pixel[x][y] = col;
        }
        else {
          pixel[x][y] = '-';
        }
      }
    }
  }
}

void copy2D(bool input[][LETTER_WIDTH], bool out[][LETTER_WIDTH]) {

  for (int x = 0; x < LETTER_WIDTH; x++) {
    for (int y = 0; y < NUM_ROWS; y++) {
      out[y][x] = input[y][x];
    }
  }

}
